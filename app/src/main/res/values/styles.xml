<resources>

    <style name="AppTheme.CardView" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="contentPadding">0dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="android:layout_marginLeft">@dimen/fix_card_margin</item>
        <item name="android:layout_marginRight">@dimen/fix_card_margin</item>
    </style>

    <style name="AppTheme.TransparentText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/transparent_white</item>
    </style>

    <style name="AppTheme.MainToolbarTextAppearence" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="compatFont">BebasBold</item>
    </style>


    <!-- LAYOUT -->

    <style name="AppTheme.Layout" />

    <style name="AppTheme.Layout.WithDivider">
        <item name="android:divider">@drawable/space_normal</item>
        <item name="android:showDividers">middle</item>
    </style>

    <style name="AppTheme.PaddingLayout" parent="AppTheme.Layout">
        <item name="android:padding">@dimen/space_large</item>
    </style>

    <style name="AppTheme.PaddingLayout.WithDivider">
        <item name="android:divider">@drawable/space_normal</item>
        <item name="android:showDividers">middle</item>
    </style>


    <!-- TEXT -->

    <style name="AppTheme.Text">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="AppTheme.Title">
        <item name="android:textSize">@dimen/font_title</item>
        <item name="android:textColor">@color/text_title</item>
    </style>


    <style name="AppTheme.FeedTitle">
        <item name="compatFont">BebasRegular</item>
        <item name="android:textSize">@dimen/font_bebas_huge</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:padding">@dimen/space_large</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowRadius">10</item>
    </style>

    <style name="AppTheme.FeedTag">
        <item name="compatFont">BebasLight</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/space_small</item>
        <item name="android:drawablePadding">@dimen/space_small</item>
        <item name="android:background">@drawable/tag_red</item>
        <item name="compatTintColor">@color/white</item>
    </style>

    <style name="AppTheme.FeedDate" parent="AppTheme.Text">
        <item name="compatFont">BebasBold</item>
        <item name="android:textSize">@dimen/font_bebas_huge</item>
    </style>

    <style name="AppTheme.FeedMonth" parent="AppTheme.Text">
        <item name="compatFont">BebasLight</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTheme.FeedLead" parent="AppTheme.Text">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="AppTheme.FeedPlace" parent="AppTheme.Text">
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>


    <style name="AppTheme.DetailTitle">
        <item name="compatFont">BebasRegular</item>
        <item name="android:textSize">@dimen/font_bebas_huge</item>
    </style>

    <style name="AppTheme.DetailTagline">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>


    <style name="AppTheme.DetailMeta">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:drawablePadding">@dimen/space_large</item>
        <item name="compatTintColor">@color/text_primary</item>
    </style>

    <style name="AppTheme.DetailMeta.Extra">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_marginLeft">@dimen/icon_size_normal</item>
        <item name="android:paddingLeft">@dimen/space_large</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
