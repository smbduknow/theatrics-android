<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    style="@style/AppTheme.PaddingLayout.WithDivider">

    <TextView
        android:id="@+id/detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/AppTheme.DetailTitle"
        tools:text="Event title"/>

    <me.smbduknow.theatrics.ui.commons.CompatTextView
        android:id="@+id/detail_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:drawablePadding="@dimen/space_large"
        app:compatDrawableStart="@drawable/ic_place_black_18dp"
        app:compatTintColor="@color/gray_42"
        tools:text="Place Name"/>

    <me.smbduknow.theatrics.ui.commons.CompatTextView
        android:id="@+id/detail_running_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:drawablePadding="@dimen/space_large"
        app:compatDrawableStart="@drawable/ic_access_time_black_18dp"
        app:compatTintColor="@color/gray_42"
        tools:text="2 hr 3 min"/>

    <TextView
        android:id="@+id/detail_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Description"/>

</LinearLayout>